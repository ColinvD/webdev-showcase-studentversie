<h2>Login</h2>
<form asp-action="Login" method="post">
    <label>Email</label>
    <input name="email" />
    <label>Wachtwoord</label>
    <input type="password" name="password" />
    <button type="submit">Login</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
